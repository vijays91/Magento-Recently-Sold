<?xml version="1.0"?>
<config>
    <tabs>
        <myconf_vijaystore translate="label" module="recentsold">
            <label>Vijay</label>
            <sort_order>100</sort_order>
        </myconf_vijaystore>
    </tabs>	
	
    <sections>
        <recentsold_tab translate="label" module="recentsold">
            <label>Recently Sold Product</label>
            <tab>myconf_vijaystore</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <recentsold_setting translate="label comment">
                    <label>Recently Sold Setting</label>
                    <sort_order>503</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                      <recentsold_active translate="label comment">
                            <label>Recently Sold</label>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </recentsold_active>
						<recentsold_position translate="label comment">
                            <label>Display In</label>
							<frontend_type>select</frontend_type>
                            <source_model>recentsold/dropdown_position</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </recentsold_position>
						<recentsold_title translate="label comment">
								<label>Title</label>
								<frontend_type>text</frontend_type>
								<validate>required-entry </validate>							
								<sort_order>6</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
						</recentsold_title>
						<recentsold_display_count translate="label comment">
							<label>Product To be Display</label>
							<frontend_type>text</frontend_type>
							<validate>required-entry </validate>	
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</recentsold_display_count> 
                     </fields>
                </recentsold_setting>		
            </groups>
        </recentsold_tab>
    </sections>
</config>